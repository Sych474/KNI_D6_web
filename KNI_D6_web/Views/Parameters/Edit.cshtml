@model KNI_D6_web.Model.Parameters.Parameter

@{
    ViewData["Title"] = "Изменение параметра";
}

<h1>Изменение параметра</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AutoReset" class="control-label">Автосброс</label>
                <input asp-for="AutoReset" class="form-control" />
                <span asp-validation-for="AutoReset" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary" asp-action="Index">К списку параметров</a>
</div>

