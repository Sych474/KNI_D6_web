@model KNI_D6_web.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<h1>Регистрация нового пользователя</h1>
<div class="row m-3">
    <div class="col-md-5">
        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Login">Логин</label><br />
                <input class="form-control" asp-for="Login" placeholder="Логин"/>
                <span asp-validation-for="Login"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label><br />
                <input class="form-control" asp-for="Email" placeholder="Email"/>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Пароль</label><br />
                <input class="form-control" asp-for="Password" placeholder="Пароль"/>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm">Подтверждение пароля</label><br />
                <input class="form-control" asp-for="PasswordConfirm" placeholder="Подтверждение пароля"/>
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Регистрация" />
            </div>
        </form>
    </div>
</div>