@model KNI_D6_web.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Авторизация";
}

<h1>Авторизация</h1>
<div class="row m-2">
    <div class="col-md-5">
        <form method="post" asp-controller="Account" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label class="control-label" asp-for="Login">Логин</label><br />
                <input class="form-control" asp-for="Login" placeholder="Логин" />
                <span asp-validation-for="Login"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Password">Пароль</label><br />
                <input class="form-control" asp-for="Password" placeholder="Пароль" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <input class="checkbox" asp-for="RememberMe" />
                <label class="form-check-label" asp-for="RememberMe">Запомнить меня</label>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Войти" />
            </div>
        </form>
    </div>
</div>
<div class="row m-2">
    <div class="col-md-5">
        <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="ForgotPassword">Восстановление пароля</a>
    </div>
</div>