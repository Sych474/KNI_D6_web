@model KNI_D6_web.Model.Semester

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление семестра</h1>
@if (Model.IsCurrent)
{
    <h4>Невозможно удалить текущий семестр!</h4>
}
else
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsCurrent)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsCurrent)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Удалить" class="btn btn-danger" />
        </form>
    </div>
}


<div class="mt-2">
    <a class="btn btn-outline-primary" asp-action="Index">К списку семестров</a>
</div>
