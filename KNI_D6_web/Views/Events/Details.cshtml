@model KNI_D6_web.Model.Event

@{
    ViewData["Title"] = "Подробности о мероприятии";
}

<h1>Подробно о мероприятии</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Дата и время проведения
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-primary" asp-action="Index">К списку мероприятий</a>
</div>
